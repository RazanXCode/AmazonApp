@model List<AmazonApp.Models.Order>

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.UserID</td>
                <td>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>Product ID: @detail.ProductID - Quantity: @detail.Quantity - SubTotal: @detail.SubTotal</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
